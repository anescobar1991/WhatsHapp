<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mainActivity_frameLayout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainActivity_textView_messageBar"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/mainActivity_textView_messageBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#ff2581f1"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="@string/mainActivity_messageBarText"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>
